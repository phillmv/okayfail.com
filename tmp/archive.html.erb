<% content_for :page_title do %>
  <title>phillmv - archive</title>
<% end %>

<% content_for :shortbio_menu do %>
  <h2>Archive of posts</h2>
<% end %>
<%= render partial: "shared/shortbio" %>

<section>
  <div class="archive">
    <ol class="article-list">
      <p>Follow along using <a href="/atom.xml">the rss feed</a>.</p>
      <hr/>
      <% @current_notebook.entries.notes.order(occurred_at: :desc).visible.each do |article| %>
        <li class="article">
          <h3><%= link_to article.subject, article %></h3>
          <h5><%= article.occurred_at.strftime('%B %-d, %Y') %></h5>
        </li>
      <% end %>
    </ol>
  </div>
</section>
