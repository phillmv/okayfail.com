<h2><%= title %></h2>
<p><a href="/img/azulejos/<%= filename %>"><img src="/img/azulejos/<%= filename %>"></a></p>

<% saints.each do |s| %>
  <%= render_partial s %>
<% end %>

<% related = saints.map { |s| data.azulejos["saints"][s] }.flatten.reject { |f, a| f == filename } %>

<% if saints.any? { |s| related.size > 0 } %>
  <h4>Related azulejos:</h4>
  <% saints.each do |s| %>
    <%= render_partial 'views/azulejos', :locals => { :azulejos => related }  %>
  <% end %>
<% end %>

