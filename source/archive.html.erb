<% content_for :page_title do %>
  <title>phillmv - archive</title>
<% end %>


<% wrap_layout :layout do %>
  <% content_for :shortbio_menu do %>
    <h2>Archive of posts</h2>
  <% end %>
  <%= partial "shared/shortbio" %>
  <section>
    <div class="archive">
      <ol class="article-list">
        <p>Follow along using <a href="/atom.xml">the rss feed</a>.</p>
        <hr/>
        <% blog.articles.reject { |a| a.data[:draft] }.each do |article| %>
          <li class="article">
            <h3><%= link_to article.title, article %></h3>
            <h5><%= article.date.strftime('%B %m, %Y') %></h5>
          </li>
        <% end %>
      </ol>
    </div>
  </section>
<% end %>
